  <style>
    *{
        font-family: "Poppins", sans-serif;
    }
    
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #edf2f7;
    }

    .container {
      background-color: #fff;
      padding: 50px 30px;
      border-radius: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
      text-align: center;
      max-width: 350px;
      min-width: 450px;
    }

    .container h3 {
      margin-bottom: 30px;
      color: #333;
    }

    .btn-custom {
      width: 100%;
      text-decoration: none;
      display: block;
      padding: 10px 15px;
      margin: 10px 0;
      font-size: 16px;
      border-radius: 30px;
    }

    .btn-purple {
      margin-top: 30px;
      margin-bottom: 20px;
      background-color: #6a5acd;
      color: white;
      outline: #6a5acd;
      border: 1px solid #6a5acd;
    }

    .btn-purple:hover {
      background-color: #493b9f;
      color: #fff;
    }

    .btn-black {
      background-color: #222;
      outline: #222;
      border: 1px solid #222;
      color: white;
    }

    .btn-black:hover {
        background-color: #000;
        color: white;
    }
    .brand-name {
        color:#493b9f;
        font-weight: 300;
        font-size: 30px;
    }

  </style>
</head>
