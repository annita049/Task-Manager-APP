<!-- Task Search and Create Option -->
<div class="d-flex justify-content-between align-items-center mb-2 w-100 my-2">
    <form action="" method="POST" id="searchForm">
        <div class="search-bar">
            <input type="text" class="form-control" placeholder="Search tasks..." id="titleInput" name="title">
            <button type="submit" class="search-btn" id="searchButton">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <a type="button" class="btn btn-dark create-task-btn" id="createTask" data-bs-toggle="modal" data-bs-target="#CreateTaskModal">
        <i class="fa-solid fa-plus"></i>
        <span class="create-task-btn-name">Create Task</span>
    </a>
</div>